{
  "name": "verity-event-signing-service",
  "version": "0.10.5",
  "description": "Verity NIP-46 event signing service",
  "author": "pablof7z (Original Author - We forked for Verity)",
  "main": "dist/index.js",
  "bin": {
    "nsecbunkerd": "dist/index.js",
    "nsecbunker-client": "dist/client/client.js"
  },
  "files": [
    "dist",
    "scripts/start.ts",
    "prisma/schema.prisma",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts --clean; tsup src/daemon/index.ts -d dist/daemon; tsup src/client.ts -d dist/client",
    "build:client": "tsup src/client.ts -d dist/client",
    "format": "prettier --write .",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate deploy",
    "prisma:create": "prisma db push",
    "start": "bun ./scripts/start.ts",
    "lfg": "bun ./scripts/start.ts start",
    "nsecbunkerd": "bun dist/index.js",
    "client": "bun dist/client/client.js"
  },
  "keywords": [
    "nostr"
  ],
  "license": "MIT",
  "dependencies": {
    "@fastify/formbody": "7.4.0",
    "@fastify/view": "8.2.0",
    "@inquirer/password": "1.1.2",
    "@inquirer/prompts": "1.2.3",
    "@noble/hashes": "^1.5.0",
    "@nostr-dev-kit/ndk": "file:../event-protocol-module/core",
    "@prisma/client": "^5.10.0",
    "@scure/base": "^2.0.0",
    "@types/yargs": "17.0.24",
    "axios": "1.6.2",
    "bcrypt": "5.1.1",
    "debug": "4.3.4",
    "dotenv": "16.3.1",
    "fastify": "4.24.3",
    "handlebars": "4.7.8",
    "lnbits": "1.1.5",
    "lnbits-ts": "0.0.2",
    "nostr-tools": "^2.17.2",
    "tseep": "^1.3.1",
    "yargs": "17.7.2",
    "prisma": "^5.10.0"
  },
  "devDependencies": {
    "@types/debug": "4.1.8",
    "@types/node": "^22.0.0",
    "prettier": "^3.0.0",
    "ts-node": "10.9.1",
    "tsup": "7.2.0",
    "typescript": "^5.5.0"
  }
}
